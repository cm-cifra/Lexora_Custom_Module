<odoo>
    <!-- Add purchase_order to stock.picking search view -->
    <record id="view_stock_picking_po_search" model="ir.ui.view">
        <field name="name">stock.picking.purchase.order.search</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_internal_search"/>
        <field name="arch" type="xml">
            <search position="inside">
                <field name="purchase_order" string="PO # like"/>
            </search>
        </field>
    </record>

    <!-- Add purchase_order to stock.picking tree view -->
    <record id="view_stock_picking_po_tree" model="ir.ui.view">
        <field name="name">stock.picking.purchase.order.tree</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.vpicktree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="purchase_order"/>
            </xpath>
        </field>
    </record>
</odoo>
