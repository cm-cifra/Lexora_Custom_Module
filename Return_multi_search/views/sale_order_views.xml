<odoo>
    <!-- Add purchase_order to search view -->
    <record id="view_returns_report_search" model="ir.ui.view">
        <field name="name">returns.report.search</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <search string="Returns Report">
                <field name="purchase_order" string="Purchase Order"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="approved_by"/>
                <field name="is_processed"/>
            </search>
        </field>
    </record>

    <!-- Add purchase_order to tree view -->
    <record id="view_returns_report_tree" model="ir.ui.view">
        <field name="name">returns.report.tree</field>
        <field name="model">returns.report</field>
        <field name="arch" type="xml">
            <tree string="Returns Report">
                <field name="purchase_order"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="quantity"/>
                <field name="location_id"/>
                <field name="location_dest_id"/>
                <field name="approved_by"/>
                <field name="is_processed"/>
                <field name="reference"/>
            </tree>
        </field>
    </record>
</odoo>
