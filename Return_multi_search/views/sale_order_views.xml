<odoo>
    <!-- Add purchase_order to returns.report search view -->
    <record id="view_returns_report_po_search" model="ir.ui.view">
        <field name="name">returns.report.purchase.order.search</field>
        <field name="model">returns.report</field>
        <field name="inherit_id" ref="your_module.view_returns_report_search"/> <!-- replace with actual base search view -->
        <field name="arch" type="xml">
            <search position="inside">
                <field name="purchase_order" string="PO # like"/>
            </search>
        </field>
    </record>

    <!-- Add purchase_order to returns.report tree view -->
    <record id="view_returns_report_po_tree" model="ir.ui.view">
        <field name="name">returns.report.purchase.order.tree</field>
        <field name="model">returns.report</field>
        <field name="inherit_id" ref="your_module.view_returns_report_tree"/> <!-- replace with actual base tree view -->
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="purchase_order"/>
            </xpath>
        </field>
    </record>
</odoo>
