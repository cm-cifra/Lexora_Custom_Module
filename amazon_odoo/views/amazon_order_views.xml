<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_amazon_order_tree" model="ir.ui.view">
        <field name="name">amazon.order.tree</field>
        <field name="model">amazon.order</field>
        <field name="arch" type="xml">
            <tree string="Amazon Orders">
                <field name="order_id"/>
                <field name="buyer_name"/>
                <field name="purchase_date"/>
                <field name="order_total"/>
                <field name="order_status"/>
            </tree>
        </field>
    </record>

    <record id="view_amazon_order_form" model="ir.ui.view">
        <field name="name">amazon.order.form</field>
        <field name="model">amazon.order</field>
        <field name="arch" type="xml">
            <form string="Amazon Order">
                <group>
                    <field name="order_id"/>
                    <field name="buyer_name"/>
                    <field name="purchase_date"/>
                    <field name="order_total"/>
                    <field name="order_status"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_amazon_order" model="ir.actions.act_window">
        <field name="name">Amazon Orders</field>
        <field name="res_model">amazon.order</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="amazon_order_root" name="Amazon"/>
    <menuitem id="amazon_order_menu" name="Orders" parent="amazon_order_root"/>
    <menuitem id="amazon_order_action_menu" name="Amazon Orders" parent="amazon_order_menu" action="action_amazon_order"/>
</odoo>
