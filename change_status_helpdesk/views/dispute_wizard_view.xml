<odoo>
    <record id="view_dispute_confirm_wizard_form" model="ir.ui.view">
        <field name="name">dispute.confirm.wizard.form</field>
        <field name="model">dispute.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Dispute">
                <group>
                    <field name="message" nolabel="1"/>
                </group>
                <footer>
                    <button name="action_yes" string="Yes" type="object" class="btn-primary"/>
                    <button name="action_no" string="No" type="object" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
