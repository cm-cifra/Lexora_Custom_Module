<odoo>
    <record id="view_dispute_confirm_wizard" model="ir.ui.view">
        <field name="name">dispute.confirm.wizard.form</field>
        <field name="model">dispute.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Dispute">
                <group>
                    <!-- Fixed: use o_form_label for standalone labels -->
                    <label string="⚠️ Are you sure you want to mark this ticket as Disputed?"
                           class="o_form_label"/>
                </group>
                <footer>
                    <button string="Yes, Proceed" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
