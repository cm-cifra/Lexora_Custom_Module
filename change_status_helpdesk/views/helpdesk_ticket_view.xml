<odoo>
    <!-- Inherit Helpdesk Ticket form -->
    <record id="charge_status_helpdesk_ticket_view_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.ticket.form.charge.status.confirm.inherit</field>
        <field name="model">helpdesk.ticket</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_ticket_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header" position="inside">
                <button name="action_open_dispute_confirm_wizard"
                        type="object"
                        string="Mark as Disputed"
                        class="btn-primary"
                        modifiers="{'invisible': [['x_studio_charge_status', '=', 'Disputed']]}"
                />
            </xpath>
        </field>
    </record>

    <!-- Wizard view -->
    <record id="view_dispute_confirm_wizard" model="ir.ui.view">
        <field name="name">dispute.confirm.wizard.form</field>
        <field name="model">dispute.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Dispute">
                <group>
                    <label string="⚠️ Are you sure you want to mark this ticket as Disputed?"/>
                </group>
                <footer>
                    <button string="Yes, Proceed"
                            type="object"
                            name="action_confirm"
                            class="btn-primary"/>
                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action to open the wizard -->
    <record id="action_dispute_confirm_wizard" model="ir.actions.act_window">
        <field name="name">Confirm Dispute</field>
        <field name="res_model">dispute.confirm.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
