<odoo>
    <data>

        <!-- === PRODUCT KIT FORM VIEW === -->
        <record id="view_product_kits_form" model="ir.ui.view">
            <field name="name">product.kits.form</field>
            <field name="model">product.kits</field>
            <field name="arch" type="xml">
                <form string="Product Kit">
                    <sheet>
                        <group string="Kit Information">
                            <field name="product_sku"/>
                            <field name="name"/>
                            <field name="image_1920" widget="image" class="oe_avatar"
                                   options="{'preview_image': 'image_128'}"/>
                            <field name="size"/>
                            <field name="collection"/>
                            <field name="color"/>
                        </group>

                        <group string="Kit Components">
                            <field name="cabinet_sku"/>
                            <field name="counter_top_sku"/>
                            <field name="faucet_sku"/>
                            <field name="mirror_sku"/>
                        </group>

                        <group string="Matching Inventory Products" col="2">
                            <field name="product_ids" widget="many2many_avatar" options="{'no_create': True}"/>
                            <field name="cabinet_ids" widget="many2many_avatar" options="{'no_create': True}"/>
                            <field name="counter_top_ids" widget="many2many_avatar" options="{'no_create': True}"/>
                            <field name="faucet_ids" widget="many2many_avatar" options="{'no_create': True}"/>
                            <field name="mirror_ids" widget="many2many_avatar" options="{'no_create': True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- === PRODUCT KIT TREE VIEW === -->
        <record id="view_product_kits_tree" model="ir.ui.view">
            <field name="name">product.kits.tree</field>
            <field name="model">product.kits</field>
            <field name="arch" type="xml">
                <tree import="1">
                    <field name="image_128" widget="image" options="{'size': [60, 60]}"/>
                    <field name="product_sku"/>
                    <field name="name"/>
                    <field name="size"/>
                    <field name="collection"/>
                    <field name="color"/>
                </tree>
            </field>
        </record>

        <!-- === PRODUCT KIT ACTION === -->
        <record id="action_product_kits" model="ir.actions.act_window">
            <field name="name">Product Kits</field>
            <field name="res_model">product.kits</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- === MAIN MENU ROOT === -->
        <menuitem id="menu_product_kits_root"
                  name="Product Kits"
                  sequence="10"
                  web_icon="base,static/description/icon.png"/>

        <!-- === SUBMENU: MANAGE KITS === -->
        <menuitem id="menu_product_kits"
                  name="Manage Kits"
                  parent="menu_product_kits_root"
                  action="action_product_kits"
                  sequence="5"/>

        <!-- === EXPORT WIZARD VIEW === -->
        <record id="view_product_kit_export_wizard" model="ir.ui.view">
            <field name="name">product.kit.export.wizard.form</field>
            <field name="model">product.kit.export.wizard</field>
            <field name="arch" type="xml">
                <form string="Export Product Kits">
                    <group>
                        <field name="file" filename="filename"/>
                        <field name="filename" readonly="1"/>
                    </group>
                    <footer>
                        <button name="export_kits" type="object" string="Export Kits" class="btn-primary"/>
                        <button string="Close" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_product_kit_export" model="ir.actions.act_window">
            <field name="name">Export Product Kits</field>
            <field name="res_model">product.kit.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_kits_export"
                  name="Export Kits"
                  parent="menu_product_kits_root"
                  action="action_product_kit_export"
                  sequence="20"/>

        <!-- === IMPORT WIZARD VIEW === -->
        <record id="view_product_kit_import_wizard" model="ir.ui.view">
            <field name="name">product.kit.import.wizard.form</field>
            <field name="model">product.kit.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Product Kits">
                    <group>
                        <field name="file" filename="filename"/>
                        <field name="filename"/>
                    </group>
                    <footer>
                        <button string="Import" type="object" name="import_product_kits" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_import_product_kits" model="ir.actions.act_window">
            <field name="name">Import Product Kits</field>
            <field name="res_model">product.kit.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_product_kits"
                  name="Import Kits"
                  parent="menu_product_kits_root"
                  action="action_import_product_kits"
                  sequence="10"/>

    </data>
</odoo>
