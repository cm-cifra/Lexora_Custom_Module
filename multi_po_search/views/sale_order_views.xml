<odoo>
    <!-- Extend sale order search view -->
    <record id="view_sale_order_po_search" model="ir.ui.view">
        <field name="name">sale.order.purchase.order.search</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch" type="xml">
            <search position="inside">
                <!-- Text search -->
                <field name="purchase_order" string="Purchase Order"/>

                <!-- Quick filter: show only purchase orders with -R -->
                <filter string="With -R" name="filter_purchase_order_r"
                        domain="[('purchase_order', 'ilike', '-R')]"/>
            </search>
        </field>
    </record>

    <!-- Extend sale order tree view -->
    <record id="view_sale_order_po_tree" model="ir.ui.view">
        <field name="name">sale.order.purchase.order.tree</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="purchase_order"/>
            </xpath>
        </field>
    </record>
</odoo>
