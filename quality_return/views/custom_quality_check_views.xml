<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_stock_move_line_root"
              name="Stock Move Lines"
              parent="stock.menu_stock_root"
              sequence="20"/>

    <!-- Action filtered by RETURN locations -->
    <record id="action_stock_move_line_viewer" model="ir.actions.act_window">
        <field name="name">Return Move Lines</field>
        <field name="res_model">stock.move.line</field>
        <field name="view_mode">tree,form</field>
        <!-- filter by location_dest_id.complete_name -->
        <field name="domain">[("location_dest_id.complete_name", "like", "WH/IN/RETURN%")]</field>
        <field name="help" type="html">
            <p>No return move lines found.</p>
        </field>
    </record>

    <!-- Submenu -->
    <menuitem id="menu_stock_move_line"
              name="Return Move Lines"
              parent="menu_stock_move_line_root"
              action="action_stock_move_line_viewer"/>
</odoo>
