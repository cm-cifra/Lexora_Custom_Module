<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Root Menu -->
    <menuitem id="menu_custom_quality_root"
              name="Quality Checks"
              sequence="50"/>

    <!-- Action with domain filter -->
    <record id="action_custom_quality_check_return" model="ir.actions.act_window">
        <field name="name">Return Quality Checks</field>
        <field name="res_model">quality.check</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("x_location", "like", "WH/IN/RETURN%")]</field>
        <field name="help" type="html">
            <p>No return quality checks found.</p>
        </field>
    </record>

    <!-- Submenu for Returns -->
    <menuitem id="menu_custom_quality_check_return"
              name="Return Checks"
              parent="menu_custom_quality_root"
              action="action_custom_quality_check_return"
              sequence="10"/>
</odoo>
