<odoo>
    <!-- Tree View -->
    <record id="view_sale_custom_record_tree" model="ir.ui.view">
        <field name="name">sale.custom.record.tree</field>
        <field name="model">sale.custom.record</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_order_id"/>
                <field name="carrier_id"/>
                <field name="return_date"/>
                <field name="status"/>
                <field name="ship_date"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_sale_custom_record_form" model="ir.ui.view">
        <field name="name">sale.custom.record.form</field>
        <field name="model">sale.custom.record</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_save" string="Save" type="object" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </header>
                <sheet>
                    <group>
                        <field name="sale_order_id" options="{'no_create': True}"/>
                        <field name="carrier_id"/>
                        <field name="return_date"/>
                        <field name="ship_date"/>
                        <field name="status"/>
                        <field name="notes"/>
                    </group>

                    <!-- Return Lines -->
                    <notebook>
                        <page string="Returned Products">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="order_line_id"/>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Root Menu (App) -->
    <menuitem id="menu_sale_custom_root"
              name="Return Reports"
              sequence="10"
              action="action_sale_custom_record"
              web_icon="return_report,static/description/icon.png"/> 

    <!-- Submenu -->
    <menuitem id="menu_sale_custom_record"
              name="All Reports"
              parent="menu_sale_custom_root"
              action="action_sale_custom_record"/>
              
    <!-- Action -->
    <record id="action_sale_custom_record" model="ir.actions.act_window">
        <field name="name">Return Reports</field>
        <field name="res_model">sale.custom.record</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
