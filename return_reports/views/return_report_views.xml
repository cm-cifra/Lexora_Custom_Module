<odoo>
    <!-- Tree View -->
    <record id="view_return_report_tree" model="ir.ui.view">
        <field name="name">return.report.tree</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="id"/>
                <field name="date"/>
                <field name="merchant_id"/>
                <field name="po_id"/>
                <field name="carrier_id"/>
                <field name="condition"/>
                <field name="state"/>
                <field name="x_po"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_return_report_form" model="ir.ui.view">
        <field name="name">return.report.form</field>
        <field name="model">return.report</field>
        <field name="arch" type="xml">
            <form string="Return Report">
                <header>
                    <!-- Confirm button -->
                    <button name="action_confirm"
                            type="object"
                            string="Confirm"
                            t-att-class="state == 'draft' and 'btn btn-primary' or 'btn btn-secondary'"
                            modifiers='{"invisible": [["state","!=","draft"]]}'
                    />

                    <!-- Mark as Done button -->
                    <button name="action_done"
                            type="object"
                            string="Mark as Done"
                            t-att-class="state == 'confirmed' and 'btn btn-success' or 'btn btn-secondary'"
                            modifiers='{"invisible": [["state","!=","confirmed"]]}'
                    />

                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,done"/>
                </header>

                <sheet>
                    <group>
                        <!-- Two-column layout -->
                        <group col="2">   
                            <field name="return_id" readonly="1"/>
                                <field name="x_po" />   
                           
                            <field name="merchant_id"/>
                            <field name="po_id"/> 
                            <field name="carrier_id"/>
                            <field name="condition"/>
                        </group>

                        <!-- Full-width fields -->
                        <group>  
                            <field name="return_date"/>
                            <field name="shipped_date"/>
                            <field name="prod_sku"/>
                            <field name="note"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Return Lines">
                            <field name="line_ids">
                                <tree editable="bottom">
                                    <field name="x_return_product"/>
                                    <field name="quantity"/>
                                    <field name="reason"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="x_return_product"/>
                                        <field name="quantity"/>
                                        <field name="reason"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- Chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Action + Menu -->
    <record id="action_return_report" model="ir.actions.act_window">
        <field name="name">Return Reports</field>
        <field name="res_model">return.report</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_return_report_root" name="Return Reports" sequence="10"/>
    <menuitem id="menu_return_report" name="Manage Reports" parent="menu_return_report_root" action="action_return_report" sequence="10"/>
</odoo>
