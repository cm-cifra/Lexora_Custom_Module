<odoo>
    <!-- Tree view for return orders -->
    <record id="view_sale_order_return_tree" model="ir.ui.view">
        <field name="name">sale.order.return.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Return Orders">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="order_state"/>
                <field name="is_return_order"/>
            </tree>
        </field>
    </record>

    <!-- Form view for return orders -->
    <record id="view_sale_order_return_form" model="ir.ui.view">
        <field name="name">sale.order.return.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Return Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="date_order"/>
                        <field name="order_state"/>
                        <field name="is_return_order"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to display return orders -->
    <record id="action_sale_order_return" model="ir.actions.act_window">
        <field name="name">Return Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_ids" eval="[(5,0,0),
                                      (0,0,{'view_mode':'tree','view_id':ref('view_sale_order_return_tree')}),
                                      (0,0,{'view_mode':'form','view_id':ref('view_sale_order_return_form')})]"/>
        <field name="domain">[('order_state', 'in', ['return_initiated', 'returned'])]</field>
    </record>

    <!-- Top-level menu item for the app -->
    <menuitem id="menu_sale_order_return_root"
              name="Return Orders"
              sequence="100"/>

    <!-- Submenu linking to the action -->
    <menuitem id="menu_sale_order_return_list"
              name="Return Orders List"
              parent="menu_sale_order_return_root"
              action="action_sale_order_return"
              sequence="10"/>
</odoo>
