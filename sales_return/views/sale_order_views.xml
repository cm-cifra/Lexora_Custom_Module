<odoo>
    <!-- Tree view for all sale orders -->
    <record id="view_sale_order_tree_all" model="ir.ui.view">
        <field name="name">sale.order.tree.all</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="All Sale Orders">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="company_id"/>
                <field name="date_order"/>
                <field name="state"/>
                <field name="is_return_order"/>
            </tree>
        </field>
    </record>

    <!-- Form view for all sale orders -->
    <record id="view_sale_order_form_all" model="ir.ui.view">
        <field name="name">sale.order.form.all</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Sale Order">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="company_id"/>
                        <field name="date_order"/>
                        <field name="state"/>
                        <field name="is_return_order"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_total"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to display all sale orders -->
    <record id="action_sale_order_all" model="ir.actions.act_window">
        <field name="name">All Sale Orders</field>
        <field name="res_model">sale.order</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_sale_order_tree_all"/>
        <!-- No domain to display all records -->
    </record>

    <!-- Top-level menu -->
    <menuitem id="menu_sale_order_root"
              name="Sale Orders"
              sequence="100"/>

    <!-- Submenu linking to the action -->
    <menuitem id="menu_sale_order_list"
              name="All Sale Orders"
              parent="menu_sale_order_root"
              action="action_sale_order_all"
              sequence="10"/>
</odoo>
