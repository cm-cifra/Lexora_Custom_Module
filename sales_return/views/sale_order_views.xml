<odoo>
    <!-- Tree view for return orders -->
    <record id="view_sale_order_return_tree" model="ir.ui.view">
        <field name="name">sale.order.return.tree</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Return Orders" multi_edit="1">
                <field name="company_id" invisible="1"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="order_state"/>
                <field name="x_return_date"/>
                <field name="x_condition"/>
                <field name="product_sku"/>
                <field name="is_return_order"/>
            </tree>
        </field>
    </record>

    <!-- Custom form view for return orders -->
    <record id="view_sale_order_return_form" model="ir.ui.view">
        <field name="name">sale.order.return.form</field>
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <form string="Return Order">
                <sheet>
                    <group>
                        <field name="company_id" invisible="1"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="date_order"/>
                        <field name="order_state"/>
                        <field name="x_return_date"/>
                        <field name="x_condition"/>
                        <field name="product_sku"/>
                        <field name="is_return_order"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to display only return orders -->
    <record id="action_sale_order_return" model="ir.actions.act_window">
        <field name="name">Return Orders</field>
        <field name="res_model">sale.order</field>
        <field name="domain">[('order_state', 'in', ['return_initiated', 'returned'])]</field>
        <field name="view_mode">tree,form</field>
        <field name="views" eval="[
            (ref('view_sale_order_return_tree'), 'tree'),
            (ref('view_sale_order_return_form'), 'form')
        ]"/>
        <!-- make sure default view is tree -->
        <field name="view_id" ref="view_sale_order_return_tree"/>
    </record>

    <!-- Menu items -->
    <menuitem id="menu_sale_order_return_root"
              name="Return Orders"
              sequence="100"/>
    <menuitem id="menu_sale_order_return_list"
              name="Return Orders List"
              parent="menu_sale_order_return_root"
              action="action_sale_order_return"
              sequence="10"/>

    <!-- Server action to open wizard from list view -->
    <record id="sale_order_return_tree_action_server" model="ir.actions.server">
        <field name="name">Open Return Wizard</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="state">multi</field>
        <field name="binding_view_types">list</field>
        <field name="code">
            action = {
                "name": "Update Return Orders",
                "type": "ir.actions.act_window",
                "res_model": "sale.return.wizard",
                "view_mode": "form",
                "target": "new",
                "context": {"default_order_ids": active_ids},
            }
        </field>
    </record>
</odoo>
