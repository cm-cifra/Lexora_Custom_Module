<odoo>
    <!-- List View -->
    <record id="view_sale_order_quality_tree" model="ir.ui.view">
        <field name="name">sale.order.quality.tree</field>
        <field name="model">sale.order.quality</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sale_id"/>
                <field name="partner_id"/>
                <field name="date_order"/>
                <field name="amount_total"/>
                <field name="quality_state"/>
            </tree>
        </field>
    </record>

    <!-- Action -->
    <record id="action_sale_order_quality" model="ir.actions.act_window">
        <field name="name">Sales with Quality</field>
        <field name="res_model">sale.order.quality</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_sale_order_quality_root"
              name="Sales + Quality"
              sequence="50"
              parent="sale.sale_menu_root"
              action="action_sale_order_quality"/>
</odoo>
