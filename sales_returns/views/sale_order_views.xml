<odoo>
    <!-- New Tree View for Quality Checks with Sale -->
    <record id="view_quality_check_tree_with_sale" model="ir.ui.view">
        <field name="name">quality.check.tree.with.sale</field>
        <field name="model">quality.check</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="picking_id"/>
                <field name="sale_id"/>
                <field name="quality_state"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- New Form View for Quality Checks with Sale -->
    <record id="view_quality_check_form_with_sale" model="ir.ui.view">
        <field name="name">quality.check.form.with.sale</field>
        <field name="model">quality.check</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="picking_id"/>
                        <field name="sale_id" readonly="1"/>
                        <field name="quality_state"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_quality_checks_with_sale" model="ir.actions.act_window">
        <field name="name">Quality Checks with Sales</field>
        <field name="res_model">quality.check</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_quality_check_tree_with_sale"/>
        <field name="domain">[("sale_id", "!=", False)]</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_quality_checks_with_sale"
              name="Quality Checks (Sales)"
              parent="sale.sale_menu_root"
              action="action_quality_checks_with_sale"
              sequence="60"/>
</odoo>
